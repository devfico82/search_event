@model IEnumerable<Eavent>
@{
    ViewBag.Title = "Wszystkie akcje";
    Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Nazwa</th>
        <th class="text-center">Kategoria</th>
        <th class="text-center">Akcja</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.EaventID</td>
            <td>@item.Name</td>
            <td class="text-right">@item.Category</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-eaventId="@item.EaventID">
                        Edytuj
                    </a>
                    <input type="hidden" name="EaventID" value="@item.EaventID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Usuń
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Dodaj akcję</a>
</div>